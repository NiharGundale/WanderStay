<% layout("/layouts/boilerplate") %>
<body>
    <!-- <h1>hi</h1> -->
    
     
    <!-- <h2>All listing</h2> -->
     <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            
        }
        .filter{
            margin-top: 1rem;
            text-align: center;
            margin-right: 1rem;
            opacity: 0.7;
            
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        .tax-info{
            display: none;
        }
        .tax-switch{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.5rem;
            padding: 1rem;
            /* margin-left: 20rem; */
        }
        .Filter_link{
            text-decoration: none;
            color: #222222;
        }
        

     </style>
    <div id="filters">
         
        <div class="filter">
            <a href="/listings" class="Filter_link">
                <div><i class="fa-solid fa-fire"></i></div> 
                <p>Trending</p>
            </a>
            
        </div>
        <div class="filter">
            <a href="/listings/categories/<%= "rooms" %>" class="Filter_link">
                <div><i class="fa-solid fa-bed"></i></div> 
                <p>Rooms</p>
            </a>
           
        </div>
        <div class="filter">
            <a href="/listings/categories/<%= "iconic" %>" class="Filter_link">
                <div><i class="fa-solid fa-mountain-city"></i></div> 
                <p>Iconic Cities</p>
            </a>
           
        </div>
        <div class="filter">
            <a href="/listings/categories/<%= "mountains" %>" class="Filter_link">
                <div><i class="fa-solid fa-mountain"></i></div> 
                <p>Mountains</p>
            </a>
            
        </div>
        <div class="filter" >
            <a href="/listings/categories/<%= 'pool' %>" class="Filter_link">
                <div><i class="fa-solid fa-person-swimming"></i></div> 
                <p>Amazing Pools</p>
            </a>
           
        </div>
        <div class="filter">
            <a href="/listings/categories/<%= "farms" %>" class="Filter_link">
                <div><i class="fa-solid fa-cow"></i></div> 
                <p>Farms</p>
            </a>
            
        </div>
        <div class="filter">
            <a href="/listings/categories/<%= 'arctic' %>" class="Filter_link">
                <div><i class="fa-solid fa-snowflake"></i></div> 
                <p>Arctic</p>
            </a>
            
        </div>

        <div class="tax-switch ms-auto">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                <label class="form-check-label" for="switchCheckReverse">Display Total After Taxes</label>
            </div>
        </div>
        
    </div>
 
    <ul>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" >
    <% for(let listing of all_listings ) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">

                <div class="card listing-card col" style="width: 18rem;">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-img-overlay">BOOK THIS</div>
                    <div class="card-body">
    
                         

                        <p class="card-text"><b><%= listing.title %></b> 
                       
                            
                        <p>&#8377;<%= listing.price %>/ night<i class="tax-info">&nbsp; &nbsp;+ 18% GST</i></p>
                       
                            
                    </div>
                </div>
            
            <br>
        </a>
     <% } %>
    </div>
</ul>
    

    
</body>

<script>
    let taxSwitch=document.getElementById("switchCheckReverse");
    taxSwitch.addEventListener("click",()=>{
        // console.log("nigga");
        let tax_btns=document.getElementsByClassName("tax-info");
        // console.log(tax_btns);
        for(tax_btn of tax_btns){
            if(tax_btn.style.display!='inline'){
                tax_btn.style.display='inline';
            }
            else{
                tax_btn.style.display='none';
            }
            
        }
    })
</script>


