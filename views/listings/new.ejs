<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2" >
        <h1 >Add New list</h1>
        <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
            <br>
            
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" name="listing[title]" placeholder="Enter Title:" id="title" class="form-control" required>
                
                <div class="valid-feedback">बरोबर आहे!</div>
                <div class="invalid-feedback">बरोबर टाक</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea name="listing[description]" placeholder="Enter description:" class="form-control" id="description" required></textarea>
                <div class="valid-feedback">बरोबार आहे!</div>
                <div class="invalid-feedback"> बरोबर टाक</div>
            </div>
        
        
            <!-- <div class="mb-3">
                <label for="image" class="form-label">Image link:</label>
                <input type="text" placeholder="Enter image link" name="listing[image]" id="image" class="form-control" >
            </div> -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image:</label>
                <input type="file" name="listing[image]" id="image" class="form-control" >
            </div>
             <div class="mb-3">
                <label for="Category" class="form-label">Category:</label>
                <!-- <textarea name="listing[category]" placeholder="Enter description:" class="form-control" id="Category" required></textarea> -->
                <select name="listing[category]" id="Category" class="form-control" required>
                    <option value="null"></option>
                    <option value="mountains">Mountains</option>
                    <option value="farms">Farms</option>
                    <option value="iconic">Iconic Cities</option>
                    <option value="pool">Amazing Pool</option>
                    <option value="arctic">Arctic</option>
                 
                </select>
                <div class="valid-feedback">बरोबार आहे!</div>
                <div class="invalid-feedback">बरोबर टाक</div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" name="listing[price]" placeholder="Price:" class="form-control" id="price" >
                    <!-- <div class="valid-feedback">बरोबार आहे!</div>
                    <div class="invalid-feedback">बोच्य He टाक</div> -->

                </div>
            
        
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" name="listing[location]" placeholder="location" class="form-control" id="location" required>
                    <div class="valid-feedback">बरोबार आहे!</div>
                    <div class="invalid-feedback">बरोबर टाक</div>

                </div>
                
            </div>
           
        
            <div class="mb-3">
                <label for="country" class="form-label">Country:</label>
                <input type="text" name="listing[country]" placeholder="Country" class="form-control" id="country" required>
                <div class="valid-feedback">बरोबार आहे!</div>
                <div class="invalid-feedback">बरोबर टाक</div>

            </div>
           
            <br><br>
            <button type="submit" class="but btn-dark add-btn">ADD</button>
            <br><br>
        </form>
        </div>
    </div>
    
</body>
